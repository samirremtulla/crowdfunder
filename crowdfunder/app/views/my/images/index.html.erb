<h1><%= @project.title %> &raquo; Images</h1>
<hr/>

<h4>Add Image</h4>
  <%= form_for [:my, @project, @image] do |f| %>
    <%=render "shared/form_errors", :f => f%>
    <%= f.file_field :file %>
    <%= f.submit "Upload Image", class: "btn"%>
  <%end%>

<hr/>
<h4>This Project has <%= @images.count %> Images </h4>

<ul class="thumbnails">
  <% @images.each do |img| %>
    <li class = "span2">
      <a href = "<%=img.file.url%>"> 
        <img src="<%=img.file.url%>"></img>
        <div class = "btn btn-danger"><%= link_to "Delete", my_project_image_path(@project, img), :method => :delete, :confirm => "Are you sure?" %></div>      </a>
    </li>
  <%end%>
</ul>




