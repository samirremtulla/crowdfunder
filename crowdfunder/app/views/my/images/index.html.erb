<h1><%= @project.title %> &raquo; Images</h1>
<hr/>

<h4>Add Image</h4>
  <%= form_for [:my, @project, @image] do |f| %>
    <%=render "shared/form_errors", :f => f%>
    <%= f.file_field :file %>
    <%= f.submit "Upload Image", class: "btn"%>
  <%end%>

<hr/>
<h4>This Project has <%= @images.count %> Images </h4>

<ul class="thumbnails">
  <% @images.each do |img| %>
    <li class = "span2">
      <img src="<%=img.file.url%>"></img>
    </li>
  <%end%>
</ul>




